DOWNLOAD_WORKERS=50000000
PROCESSOR_WORKERS=30000000

# HTTP connection pools
HTTP_CONNECTIONS=10000000
DOWNLOAD_CONNECTIONS=5000000

# Rate limiting (requests per second)
